extends ../layouts/application.pug

block header
  = t('views.tasks.new.create')

block content
  +formFor()(action=route('tasks') method='post')
    +input(task, 'name', errors)(type="text")
    +input(task, 'description', errors)(type="text")
    +select(task, statuses, 'statusId', errors)(type="text")
    +select(task, users, 'executorId', errors)(type="text")
    +select(task, labels, 'labelsIds', errors)(type="text" multiple)
    +submit(task)(value=t('views.tasks.new.save'))
