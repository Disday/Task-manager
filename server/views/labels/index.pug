extends ../layouts/application.pug

block header
  = t('layouts.application.labels')

block content
  a.btn.btn-success.me-1.mb-4(href=route('newlabel'))= t('views.actions.create') 

  table.table.table-striped.shadow
    thead
    tr
        th= t('views.labels.id')
        th= t('views.labels.name')
        th= t('views.labels.createdAt')
        th= t('views.labels.actions')
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td= formatDate(label.createdAt)
          td
            div.d-flex.flex-wrap
              a.btn.btn-success.me-1(href=route('editlabel', {id: label.sId}))= t('views.actions.edit') 
              +buttonTo(route('label', {id: label.sId}),
              'delete')(value=t('views.actions.delete') class="btn btn-danger me-1")