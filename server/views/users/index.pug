extends ../layouts/application.pug

block header
  = t('layouts.application.users')

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.email')
        th= t('views.users.createdAt')
        th= t('views.users.actions')
    tbody
      each user in users
        tr
          td= user.id
          td= user.email
          td= formatDate(user.createdAt)
          td
            div.d-flex.flex-wrap
              a.btn.btn-success.me-1(href=route('editUser', {id: user.sId}))= t('views.actions.edit') 
              +buttonTo(route('deleteUser', {id: user.sId}),
              'delete')(value=t('views.actions.delete') class="btn btn-danger me-1")